<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/result_pager_height"
    android:paddingTop="2dp"
    android:paddingLeft="@dimen/default_padding_horizontal"
    android:paddingRight="@dimen/default_padding_horizontal"
    android:background="@color/transparent_white">

    <ImageButton
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/start"
        android:paddingLeft="@dimen/default_padding_horizontal"
        android:src="@drawable/ic_start" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/start"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingTop="4dp"
        android:textColor="@color/blue"
        android:fontFamily="sans-serif-condensed"
        android:textSize="@dimen/big_2" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/start"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textSize="@dimen/small"
        android:textColor="@color/brown" />

</RelativeLayout>
