<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:drawablePadding="8dp"
        android:contentDescription="@string/route_description" />

    <TextView
        android:id="@+id/simple_instruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".70"
        android:layout_gravity="left"
        android:padding="@dimen/default_padding_list_item"
        android:fontFamily="sans-serif-light-condensed"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/medium" />

    <com.mapzen.open.widget.DistanceView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-bold"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/medium" />

</LinearLayout>
