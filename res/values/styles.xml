<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Mapzen" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Mapzen</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_mapzen</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_mapzen</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Mapzen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:itemTextAppearance">@style/MapzenItemTextAppearance</item>
        <item name="android:actionOverflowButtonStyle">@style/MapzenOverflow</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow</item>
    </style>

    <style name="ActionBar.Solid.Mapzen" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/MapzenTitleText</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="MapzenTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/medium</item>
    </style>

    <style name="MapzenSearchText" parent="@android:style/TextAppearance.Holo.Widget.EditText">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="MapzenItemTextAppearance" parent="@android:style/TextAppearance.Widget.DropDownItem">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="MapzenOverflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>
</resources>
