<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Mapzen" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/blue</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Mapzen</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:itemTextAppearance">@style/MapzenItemTextAppearance</item>
        <item name="actionOverflowButtonStyle">@style/MapzenOverflow</item>
        <item name="homeAsUpIndicator">@drawable/ic_back_arrow</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="searchViewStyle">@style/Mapzen.Widget.AppCompat.SearchView</item>
    </style>
    
    <style name="Mapzen.Widget.AppCompat.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="closeIcon">@drawable/ic_cancel</item>
    </style>

    <style name="Theme.Mapzen.SearchResults" parent="Theme.Mapzen">
        <item name="actionBarStyle">@style/ActionBar.Solid.Mapzen.SearchResults</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="Theme.Mapzen.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ActionBar.Solid.Mapzen" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/MapzenTitleText</item>
        <item name="background">@color/transparent_white</item>
        <item name="icon">@drawable/ic_open_icon_action_bar</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
    </style>

    <style name="ActionBar.Solid.Mapzen.SearchResults" parent="ActionBar.Solid.Mapzen">
        <item name="titleTextStyle">@style/SearchResultsTitleText</item>
        <item name="displayOptions">showTitle</item>
    </style>

    <style name="MapzenTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">sans-serif-light-condensed</item>
    </style>

    <style name="SearchResultsTitleText" parent="MapzenTitleText">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="MapzenSearchText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="MapzenItemTextAppearance" parent="TextAppearance.AppCompat.Widget.DropDownItem">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="MapzenOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <style name="LoginBody" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/login_body_font_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LoginTerms" parent="LoginBody">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="LoginLink" parent="LoginBody">
        <item name="android:textColor">@color/red</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingBottom">@dimen/button_above_below_padding</item>
    </style>

</resources>
